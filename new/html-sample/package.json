{
    "name": "pptb-standard-sample-tool",
    "version": "1.0.5",
    "displayName": "HTML Sample Tool",
    "description": "A sample Power Platform Tool Box tool built with HTML, CSS, and TypeScript",
    "main": "index.html",
    "author": "Power Platform Tool Box",
    "keywords": [
        "powerplatform",
        "dataverse",
        "toolbox",
        "pptb",
        "sample",
        "html"
    ],
    "license": "GPL-3.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/PowerPlatform-ToolBox/desktop-app.git",
        "directory": "sample/html-sample"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "build": "tsc && npm run copy-html && npm run copy-css",
        "copy-html": "shx cp src/index.html dist/",
        "copy-css": "shx cp src/styles.css dist/",
        "finalize-package": "npm shrinkwrap",
        "watch": "tsc --watch"
    },
    "devDependencies": {
        "@pptb/types": "^1.0.8",
        "typescript": "^5.0.0",
        "shx": "^0.4.0"
    },
    "files": [
        "dist",
        "icon",
        "npm-shrinkwrap.json"
    ]
}